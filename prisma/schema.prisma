generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  COURIER
}

model User {
  id                String    @id @default(uuid())
  email             String    @unique()
  role              Role
  cpf               String    @unique
  password          String
  name              String
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime? @updatedAt
  deliveredPackages Package[] @relation("courier")
  createdPackages   Package[] @relation("admin")

  @@map("users")
}

model Receiver {
  id        String    @id @default(uuid())
  email     String    @unique()
  name      String
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt
  Package   Package[]

  @@map("receivers")
}

enum Status {
  PENDING
  WITHDRAWN
  DELIVERED
  RETURNED
}

model Package {
  id      String @id @default(uuid())
  status  Status
  address String

  receiver   Receiver @relation(fields: [receiverId], references: [id])
  receiverId String   @map("receiver_id")

  courier   User   @relation(name: "courier", fields: [courierId], references: [id])
  courierId String @map("courier_id")

  admin   User   @relation(name: "admin", fields: [adminId], references: [id])
  adminId String @map("admin_id")

  @@map("packages")
}
